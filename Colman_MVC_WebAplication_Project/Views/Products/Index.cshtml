@model IEnumerable<Colman_MVC_WebAplication_Project.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Adminstrator_Layout.cshtml";
}

<div>
    <table>
        <tr>
            <td style="padding-right: 10px"><h2>Product Management</h2></td>
            <td> <button onclick="onButtonClick('/Products/Create')"> Add Product </button></td>
        </tr>
    </table>
</div>
<br />
<br />
<table>
    <tr>
        <td><input style="padding: 6px;" type="text" id="username" placeholder="Product Name" /></td>
        <td> &nbsp; <button style="padding: 7px;" onclick="window.location = '/Products/SimpleSearch?productName='+ getElementById('username').value"> Search Product </button></td>
    </tr>
</table>
<br />
<br />

<table class="table">
    <tr class="row">
        <th class="col">
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </th>
        <th class="col">
            @Html.DisplayNameFor(model => model.Gender)
        </th>
        <th class="col">
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th class="col">
            @Html.DisplayNameFor(model => model.ProductImagePath)
        </th>
        <th class="col">
            @Html.DisplayNameFor(model => model.ProductDescription)
        </th>
        <th class="col">
            @Html.DisplayNameFor(model => model.ProductPrice) ₪
        </th>
        <th class="col">
            @Html.DisplayNameFor(model => model.ProductOrderCount)
        </th>
        <th class="col"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td class="col">
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td class="col">
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td class="col">
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td class="col">
                <img alt="@item.ProductName" src="@item.ProductImagePath" width="50" height="50" />
            </td>
            <td class="col">
                @Html.DisplayFor(modelItem => item.ProductDescription)
            </td>
            <td class="col">
                @Html.DisplayFor(modelItem => item.ProductPrice)
            </td>
            <td class="col">
                @Html.DisplayFor(modelItem => item.ProductOrderCount)
            </td>
            <td class="col">
                @Html.ActionLink("Edit", "Edit", new { id = item.ProductID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ProductID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ProductID }) |
                <a href="" onclick="boostAProduct(' Go and check our best seller @item.ProductName  @item.ProductDescription' , '@item.ProductImagePath' )"> Boost </a>
            </td>
        </tr>
    }

</table>